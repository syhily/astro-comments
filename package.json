{
  "name": "astro-headless-comments",
  "version": "1.0.0",
  "description": "A headless comments solution for Astro by using LibSQL",
  "keywords": [
    "headless",
    "astro-adapter",
    "astro-component",
    "withastro",
    "media"
  ],
  "bugs": {
    "url": "https://github.com/syhily/astro-headless-comments/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/syhily/astor-headless-comments"
  },
  "license": "MIT",
  "author": "Yufan Sheng <syhily@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "lint": "biome check --write . && prettier . --write"
  },
  "lint-staged": {
    "**/*": [
      "biome check --no-errors-on-unmatched --files-ignore-unknown=true",
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "better-auth": "^1.1.10",
    "drizzle-orm": "^0.38.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "@types/node": "^22.10.5",
    "astro": "^5.1.4",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-astro-organize-imports": "^0.4.11"
  },
  "peerDependencies": {
    "astro": "^5.0.0"
  }
}
